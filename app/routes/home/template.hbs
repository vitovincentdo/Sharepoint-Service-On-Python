<div class="container-fluid slice bg-color bg" id="first">
  <div class="container">
    <div class="form-horizontal">
      <br>
      <div class="form-group">
        <label class="col-sm-2 control-label">URL</label>
        <div class="col-sm-10">
          {{input type="text" value=newURL class="form-control" placeholder="Insert here..."}}
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-2 control-label">Method</label>
        <div class="col-sm-10">
          {{input type="text" value=newMethod class="form-control" placeholder="Insert here..."}}
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-2 control-label">Header</label>
        <div class="col-sm-10">
          {{input type="text" value=newHeader class="form-control" placeholder="Insert here..."}}
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-2 control-label">Data</label>
        <div class="col-sm-10">
          {{input type="text" value=newData class="form-control" placeholder="Insert here..."}}
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <button type="submit" class="btn btn-default" {{action "sendRequest"}}>Send Request</button>
        </div>
      </div>
    </div>
  </div>
</div>