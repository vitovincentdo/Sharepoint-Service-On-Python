<div class="container-fluid slice bg-color bg" id="first">
  <div class="container">
    <div class="form-horizontal">
      <br>
      <div class="form-group">
        <label class="col-sm-2 control-label">Username</label>
        <div class="col-sm-10">
          {{input type="text" value=newUsername class="form-control" placeholder="Insert here..."}}
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-2 control-label">Password</label>
        <div class="col-sm-10">
          {{input type="password" value=newPassword class="form-control" placeholder="Insert here..."}}
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <button type="submit" class="btn btn-default" {{action "sendLogin"}}>Login</button>
        </div>
      </div>
    </div>
  </div>
</div>