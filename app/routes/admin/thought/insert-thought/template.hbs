<div class="container-fluid slice">
  <div class="container align-self-center">
    <div class="form-horizontal">
      <br>
      <div class="form-group">
        <label class="col-sm-2 control-label">Name</label>
        <div class="col-sm-10">
          {{input type="text" value=newName class="form-control" placeholder="Insert name..."}}
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-2 control-label">Date</label>
        <div class="col-sm-10">
          {{input type="date" value=newDate class="form-control"}}
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-6 control-label">Image-Person (Drag & Drop Here)</label>
        <div class="col-sm-6">
          {{tinymce-editor options=imageOptions value=newImgPerson}}
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-6 control-label">Thought Content</label>
        <div class="col-sm-12">
          {{tinymce-editor options=ownOptions value=newThought}}
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <button type="submit" class="btn btn-default" {{action "saveThought"}}>Add to Thought List</button>
        </div>
      </div>
    </div>

    {{#if responseMessage}}
      <div class="alert alert-success">{{responseMessage}}</div>
    {{/if}}

  </div>
</div>

{{outlet}}